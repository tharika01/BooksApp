<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Enter your name">

    </EditText>

    <EditText
        android:id="@+id/email"
        android:hint="Enter your email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/name"
        >
    </EditText>
    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/password"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_below="@id/email">
    </EditText>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/password"
        android:text="Add Data"
        android:id="@+id/add_data"
        android:layout_marginTop="10dp">
    </Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_data"
        android:text="show Data"
        android:id="@+id/show_data"
        android:layout_marginTop="10dp">
    </Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/show_data"
        android:text="Update Data"
        android:id="@+id/Up_data"
        android:layout_marginTop="10dp">
    </Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Up_data"
        android:text="Delete Data"
        android:id="@+id/del_data"
        android:layout_marginTop="10dp">
    </Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/del_data"
        android:text="Show All Data"
        android:id="@+id/show_all_data"
        android:layout_marginTop="10dp">
    </Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/show_all_data"
        android:text="Delete All Data"
        android:id="@+id/del_all_data"
        android:layout_marginTop="10dp">
    </Button>

</RelativeLayout>