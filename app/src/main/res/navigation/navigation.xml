<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/navigation_home">

    <activity
        android:id="@+id/navigation_home"
        android:name="com.example.booksapp.HomeActivity"
        android:label="activity_home"
        tools:layout="@layout/activity_home" />
    <fragment
        android:id="@+id/navigation_category"
        android:name="com.example.booksapp.nav_bar.CategoryFragment"
        android:label="CategoryFragment" />
    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.booksapp.nav_bar.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.booksapp.nav_bar.ProfileFragment"
        android:label="ProfileFragment" />
</navigation>